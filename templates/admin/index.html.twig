{% extends 'base.html.twig' %}

{% block title %}Administration{% endblock %}

{% block body %}
<div class="container-fluid mt-4">
    <div class="row">
        <!-- Menu latéral -->
        <div class="col-md-3 mb-4">
            <div class="list-group shadow-sm">
                <a href="{{ path('app_admin') }}" class="list-group-item list-group-item-action active">
                    Tableau de bord
                </a>
                <a href="{{ path('app_admin_users') }}" class="list-group-item list-group-item-action">
                    Gestion des utilisateurs
                </a>
                <a href="{{ path('app_home') }}" class="list-group-item list-group-item-action">
                    Retour au site
                </a>
            </div>
        </div>

        <!-- Contenu principal -->
        <div class="col-md-9">
            <h2 class="mb-4">Tableau de bord d'administration</h2>

            <!-- Messages flash -->
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                        {{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fermer"></button>
                    </div>
                {% endfor %}
            {% endfor %}

            <!-- Statistiques -->
            <div class="row mb-4">
                <div class="col-md-4 mb-3">
                    <div class="card text-white bg-primary shadow">
                        <div class="card-body">
                            <h5 class="card-title">Utilisateurs</h5>
                            <p class="card-text display-6">{{ userCount }}</p>
                            <a href="{{ path('app_admin_users') }}" class="btn btn-light btn-sm">Voir les détails</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-3">
                    <div class="card text-white bg-success shadow">
                        <div class="card-body">
                            <h5 class="card-title">Utilisateurs vérifiés</h5>
                            <p class="card-text display-6">{{ verifiedCount }}</p>
                            <a href="{{ path('app_admin_users') }}" class="btn btn-light btn-sm">Voir les détails</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-3">
                    <div class="card text-white bg-dark shadow">
                        <div class="card-body">
                            <h5 class="card-title">Administrateurs</h5>
                            <p class="card-text display-6">{{ adminCount }}</p>
                            <a href="{{ path('app_admin_users') }}" class="btn btn-light btn-sm">Voir les détails</a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Actions rapides -->
            <div class="card shadow">
                <div class="card-body">
                    <h5 class="card-title">Actions rapides</h5>
                    <a href="{{ path('app_admin_users_new') }}" class="btn btn-primary mt-2">
                        <i class="bi bi-plus-circle me-1"></i> Créer un nouvel utilisateur
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
