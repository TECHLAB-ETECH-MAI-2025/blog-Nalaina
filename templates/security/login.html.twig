{% extends 'base.html.twig' %}

{% set show_navbar = false %}

{% block stylesheets %}
    {{ encore_entry_link_tags('app') }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
{% endblock %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header text-center bg-primary text-white">
                    <h4>Connexion</h4>
                </div>
                <div class="card-body">

                    {# Message d'erreur si échec de connexion #}
                    {% if error %}
                        <div class="alert alert-danger">
                            {{ error.messageKey|trans(error.messageData, 'security') }}
                        </div>
                    {% endif %}

                    {# Message si l'utilisateur est déjà connecté #}
                    {% if app.user %}
                        <div class="alert alert-info">
                            Vous êtes connecté en tant que {{ app.user.userIdentifier }}.
                            <a href="{{ path('app_logout') }}" class="btn btn-sm btn-warning ms-2">Se déconnecter</a>
                        </div>
                    {% endif %}

                    <form method="post" action="{{ path('app_login') }}">
                        <div class="mb-3">
                            <label for="inputEmail" class="form-label">Email</label>
                            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
                        </div>

                        <div class="mb-3">
                            <label for="inputPassword" class="form-label">Mot de passe</label>
                            <input type="password" name="password" id="inputPassword" class="form-control" required>
                        </div>

                        <div class="mb-3 form-check">
                            <input type="checkbox" class="form-check-input" name="_remember_me" id="remember_me">
                            <label class="form-check-label" for="remember_me">Se souvenir de moi</label>
                        </div>

                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                        <button type="submit" class="btn btn-primary w-100">Se connecter</button>
                    </form>

                    <div class="mt-3 text-center">
                        <a href="{{ path('app_register') }}">Créer un compte</a> |
                        <a href="{{ path('app_forgot_password_request') }}">Mot de passe oublié ?</a>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
