{% extends 'base.html.twig' %}

{% block title %}Chat avec {{ receiver.username }}{% endblock %}

{% block body %}
<div class="container mt-4">
    <h2 class="mb-4">Chat avec {{ receiver.username }}</h2>

    <div id="chat-messages" class="border rounded p-3 mb-3 bg-light" style="height: 400px; overflow-y: auto;">
        {% for message in messages %}
            <div class="mb-2 {% if message.sender == app.user %}text-end{% endif %}">
                <div class="fw-bold">{{ message.sender.username }}</div>
                <div>{{ message.content }}</div>
                <small class="text-muted">{{ message.createdAt|date('H:i:s') }}</small>
            </div>
        {% else %}
            <div class="text-muted text-center">Aucun message pour le moment.</div>
        {% endfor %}
    </div>

    {{ form_start(form) }}
        <div class="input-group">
            {{ form_widget(form.content, {'attr': {'class': 'form-control', 'placeholder': 'Écrivez un message...'}}) }}
            <button class="btn btn-primary" type="submit">Envoyer</button>
        </div>
    {{ form_end(form) }}
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const chatBox = document.getElementById('chat-messages');
        chatBox.scrollTop = chatBox.scrollHeight;
    });

    if (window.location.protocol !== 'file:') {
        setInterval(() => {
            fetch("{{ path('chat_index', {'receiverId': receiver.id}) }}", {
                method: 'GET',
                headers: {
                    'Accept': 'text/html',
                    'X-Requested-With': 'XMLHttpRequest'
                }
            })
            .then(response => {
                if (!response.ok) throw new Error('Erreur réseau : ' + response.status);
                return response.text();
            })
            .then(html => {
                const parser = new DOMParser();
                const doc = parser.parseFromString(html, 'text/html');
                const newMessages = doc.getElementById('chat-messages');
                if (newMessages) {
                    document.getElementById('chat-messages').innerHTML = newMessages.innerHTML;
                }
            })
            .catch(error => {
                console.error('Erreur de polling :', error);
                document.getElementById('chat-messages').innerHTML +=
                    '<div class="text-danger">Erreur de chargement des messages.</div>';
            });
        }, 5000);
    } else {
        console.log("Mode local - polling désactivé.");
        document.addEventListener('DOMContentLoaded', function() {
            const chatBox = document.getElementById('chat-messages');
            if (chatBox) {
                chatBox.innerHTML += `
                    <div class="alert alert-info mt-3">
                        <strong>Note :</strong> Le rafraîchissement automatique est désactivé en mode local.
                    </div>`;
            }
        });
    }
</script>
{% endblock %}
