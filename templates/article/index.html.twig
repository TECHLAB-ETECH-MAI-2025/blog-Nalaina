{% extends 'base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}
    <h1>Listes des articles</h1>
    {% for article in articles %}
        <div class="card mb-4">
            <div class="card-body">
                <h3 class="card-title">{{ article.title }}</h3>
                <p class="card-text">{{ article.content|slice(0, 150) ~ '...' }}</p>
                
                <p class="card-text">
                    <strong>Catégories :</strong>
                    {% for category in article.categories %}
                        <span class="badge bg-secondary">{{ category.title }}</span>
                    {% else %}
                        <span class="text-muted">Aucune</span>
                    {% endfor %}
                </p>

                <a href="{{ path('app_article_show', { id: article.id }) }}" class="btn btn-primary btn-sm">Voir plus</a>
                <a href="{{ path('app_article_edit', { id: article.id }) }}" class="btn btn-warning btn-sm">Éditer</a>
            </div>
        </div>
    {% else %}
        <p>Aucun article trouvé.</p>
    {% endfor %}
    

    <a href="{{ path('app_article_new') }}" class="btn btn-primary">Créer un nouveau article</a>
{% endblock %}
