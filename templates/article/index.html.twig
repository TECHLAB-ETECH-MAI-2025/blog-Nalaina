{% extends 'base.html.twig' %}

{% block title %}Articles{% endblock %}

{% block body %}
    {{ include('article/_form.html.twig') }}

    <h1>Listes des articles</h1>

    {% for article in pagination %}
        <div class="card mb-3">
            <div class="card-body">
                <h3>{{ article.title }}</h3>
                <p>{{ article.content|slice(0, 150) ~ '...' }}</p>
                <p>
                    <strong>Catégories :</strong>
                    {% for category in article.categories %}
                        {{ category.title }}{% if not loop.last %}, {% endif %}
                    {% endfor %}
                </p>
                <a href="{{ path('app_article_show', {id: article.id}) }}" class="btn btn-sm btn-info">Voir plus</a>
                <a href="{{ path('app_article_edit', {id: article.id}) }}" class="btn btn-sm btn-secondary">Modifier</a>
            </div>
        </div>
    {% else %}
        <p>Aucun article trouvé.</p>
    {% endfor %}

    <div class="d-flex justify-content-center mt-4">
        {{ knp_pagination_render(pagination, 'pagination/pagination.html.twig') }}
    </div>


{% endblock %}
